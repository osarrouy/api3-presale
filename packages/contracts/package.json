  "repository": {
    "type": "git",
    "url": "git+https://github.com/osarrouy/api3-presale.git"
  },
  "scripts": {
    "lint": "npx buidler check",
    "compile": "npx buidler compile",
    "node": "npx buidler node --no-deploy --reset",
    "test": "npx buidler test",
    "test:coverage": "npx buidler coverage --network coverage",
    "test:gas": "REPORT_GAS=TRUE npx buidler test",
    "deploy:token:rinkeby": "npx buidler deploy --tags token --network rinkeby",
    "deploy:presale:rinkeby": "npx buidler deploy --tags presale --network rinkeby",
    "deploy:whitelist:rinkeby": "npx buidler deploy --tags whitelist --network rinkeby",
    "deploy:open:rinkeby": "npx buidler deploy --tags open --network rinkeby"
  },
  "dependencies": {
    "openzeppelin-solidity": "3.2.0"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.3",
    "@nomiclabs/buidler-etherscan": "^1.3.3",
    "@nomiclabs/buidler-solhint": "^1.3.3",
    "@nomiclabs/buidler-truffle5": "1.3.4",
    "@nomiclabs/buidler-web3": "^1.3.4",
    "@openzeppelin/test-helpers": "^0.5.6",
    "buidler-deploy": "^0.5.17",
    "buidler-gas-reporter": "^0.1.3",
    "solidity-coverage": "^0.7.9",
    "web3": "^1.2.11"
  }
